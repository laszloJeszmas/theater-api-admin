extends layout

block content
    script(src='https://ajax.googleapis.com/ajax/libs/jquery/3.1.0/jquery.min.js')
    script(src='/javascripts/add.js')
    form(method='post' action='/theater/add')
        select(id='select-type', name='select-type')
            option(value='theater') Színház
            option(value='person') Személy
            option(value='performance') Előadás
            option(value='play') Dráma
        div(id='add-form')
        button(type='submit') Hozzáadás